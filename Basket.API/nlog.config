<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt"
      throwExceptions="true">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <add assembly="NLog.Targets.Fluentd" />
  </extensions>

  <!-- the targets to write to -->
  <targets>
    
     <target 
      xsi:type="Fluentd"
            name="fluentd"
            host="localhost"
            port="24224"
            tag="mediumfluentd"
            includeCallerInfo="true"
            includeAllProperties="true"
            layout="${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${logger}${newline}|${message} ${exception:format=tostring}|${newline}${aspnet-request-url}|${aspnet-mvc-controller}|${aspnet-mvc-action}" /> 

    <target xsi:type="Console" name="lifetimeConsole" layout="${level:truncate=4:tolower=true}: ${logger}${newline}      ${message}${exception:format=tostring}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="fluentd, lifetimeConsole" />
    
    <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
  </rules>
</nlog>